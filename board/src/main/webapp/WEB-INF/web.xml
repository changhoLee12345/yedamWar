<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">

	<display-name>board</display-name>

	<listener>
		<listener-class>org.apache.tiles.extras.complete.CompleteAutoloadTilesListener</listener-class>
	</listener>

	<!-- filter setting. -->
	<filter>
		<filter-name>encoding</filter-name>
		<filter-class>co.yedam.common.EncodingFilter</filter-class>
		<init-param>
			<param-name>enc</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>response check</filter-name>
		<filter-class>co.yedam.common.CheckResponseFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>response check</filter-name>
		<url-pattern>/a.do</url-pattern>
	</filter-mapping>

	<!-- servlet setting. -->
	<servlet>
		<servlet-name>first</servlet-name>
		<servlet-class>co.yedam.FirstServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>first</servlet-name>
		<url-pattern>/first.action</url-pattern>
	</servlet-mapping>

	<!-- frontcontrol -->
	<servlet>
		<servlet-name>front</servlet-name>
		<servlet-class>co.yedam.common.FrontControl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>front</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<!-- tiles setting -->
	<servlet>
		<servlet-name>Tiles Dispatch Servlet</servlet-name>
		<servlet-class>org.apache.tiles.web.util.TilesDispatchServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Tiles Dispatch Servlet</servlet-name>
		<url-pattern>*.tiles</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

</web-app>